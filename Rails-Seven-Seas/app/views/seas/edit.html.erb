<% stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"%>
<% javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"  %>
<div class="container">
<%= form_for @sea do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name, :class=> 'form-control'%>

  <%= f.label :temperature %>
  <%= f.number_field :temperature, :class=> 'form-control' %>

  <%= f.label :bio %>
  <%= f.text_area :bio, :class=> 'form-control' %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url, :class=> 'form-control' %>

  <%= f.label :mood %>
  <%= f.text_field :mood, :class=> 'form-control' %>

  <%= f.label :favorite_color %>
  <%= f.text_field :favorite_color, :class=> 'form-control' %>

  <%= f.label :scariest_creature %>
  <%= f.text_field :scariest_creature, :class=> 'form-control' %>
  <%= f.label :has_mermaids %>
  <%= f.check_box :has_mermaids %>
  </div>
  <div class="text-center row">
  <%= link_to('Delete', { action: :destroy, id: @sea.id}, method: :delete, :class => "btn btn-info") %>
  </div>
  <div class="text-center row" style="margin: 1em">
  <%=  f.submit :class => "btn btn-info", :style=> "margin: 0 auto"%>
</div>



  <% end %>
